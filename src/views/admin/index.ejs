<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet" >
    
    <title>Admin Page</title>
</head>
<body>
    <div class="container-sm">
        <nav class="navbar bg-light">
            <div class="container-fluid">
                <a class="navbar-brand"><h1>Admin Page - List User Game</h1></a>
                <a href="/logout" class="badge bg-danger">Logout</a>
            </div>
        </nav>
        <br>
        <a href="/admin/addform" type="button" class="btn btn-primary btn-lg">+ Add User</a>
        <br>
        <br>
        <div class="table-responsive">
            <table id="tableuser" class="table table-striped table-hover">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Firstname</th>
                    <th scope="col">Lastname</th>
                    <th scope="col">Username</th>
                    <th scope="col">email</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Address</th>
                    <th scope="col" class="text-center">Update</th>
                    <th scope="col" class="text-center">Delete</th>
                </tr>
                </thead>
                <tbody class="table-group-divider">
                    <% if (data) { i=1 %>
                        <% data.forEach(dta => { %>
                            <tr>
                                <th scope="row"><%= i %> </th>
                                <td><%= dta.Userbiodatum.firstname %></td>
                                <td><%= dta.Userbiodatum.lastname %></td>
                                <td><%= dta.username %> </td>
                                <td><%= dta.Userbiodatum.email %></td>
                                <td><%= dta.Userbiodatum.phone %></td>
                                <td><%= dta.Userbiodatum.address %></td>
                                <td class="text-center">
                                    <a class="btn btn-info" href="/admin/editform/<%= dta.id+'/'+dta.Userbiodatum.id  %>">Biodata</a>&nbsp; &nbsp;
                                    <a class="btn btn-warning" href="/admin/editPassform/<%= dta.id %>">Password</a>&nbsp; &nbsp;
                                </td>
                                <td>
                                    <a class="btn btn-danger" href="/admin/deleteConfirm/<%= dta.id+'/'+dta.Userbiodatum.id %>">Delete</a></td>
                            </tr>
                        <% i++ }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.js" ></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js" ></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $('#tableuser').DataTable();
        });
    </script>
</body>
</html>


